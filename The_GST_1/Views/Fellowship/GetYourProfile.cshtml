@if (TempData["ErrorMessage"] != null)
{
    <script>
        Swal.fire({
            title: 'Fail To Registor account!',
            text: '@TempData["ErrorMessage"]',
            icon: 'warning'
        });
    </script>
}

<div class="container-fluid">

    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">

                <div class="col-lg-12">
                    <div class="p-5">
                        <div class="text-center">

                            <h1 class="h4 text-gray-900 mb-4">  @ViewBag.UserProfileType  </h1>

                        </div>
                        <form class="user" asp-action="UpdateFellowship" id="registerForm" method="post" enctype="multipart/form-data">
                            <div style="font-size:20px;" asp-validation-summary="ModelOnly" class="text-danger" role="alert" id="existEmail"></div>
                            <br />
                            <input type="hidden" asp-for="Id" class="form-control" />




                            <div style="margin-bottom:-15px" class="row">
                                <div class="col-sm-4 mb-3 mb-sm-0">
                                    <label class=" form-control-user test  "> First Name </label>
                                </div>
                                <div class="col-sm-4 mb-3 mb-sm-0">
                                    <label class=" form-control-user test "> Middle Name </label>
                                </div>
                                <div class="col-sm-4 mb-3 mb-sm-0">
                                    <label class=" form-control-user test"> Last Name</label>
                                </div>

                            </div>
                            <div class="form-group row">


                                <div class="col-sm-4 mb-3 mb-sm-0">

                                    <input asp-for="FirstName" class="form-control form-control-user test" id="exampleFirstName"
                                           placeholder="First Name" readonly />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>

                                </div>
                                <div class="col-sm-4">
                                    <input asp-for="MiddleName" class="form-control form-control-user requiredFiled test" id="exampleFirstName"
                                           placeholder="Middel Name" readonly />
                                    <span asp-validation-for="MiddleName" class="text-danger"></span>
                                </div>
                                <div class="col-sm-4 mb-3 mb-sm-0">

                                    <input asp-for="LastName" class="form-control form-control-user test" id="exampleFirstName"
                                           placeholder="Last Name" readonly />
                                    <span asp-validation-for="LastName" class="text-danger"></span>

                                </div>
                            </div>



                            <div style="margin-bottom:-15px" class="row">
                                <div class="col-sm-3 mb-3 mb-sm-0">
                                    <label class=" form-control-user test "> Phone-No</label>
                                </div>
                                <div class="col-sm-4 mb-3 mb-sm-0">
                                    <label class=" form-control-user test "> Email Address</label>
                                </div>
                                <div class="col-sm-5 mb-3 mb-sm-0">
                                    <label class=" form-control-user test ">Address</label>
                                </div>

                            </div>
                            <div class="form-group row">

                                <div class="col-sm-3">
                                    <input asp-for="PhoneNumber" class="form-control form-control-user test" id="exampleFirstName"
                                           placeholder="Phone No" readonly />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>

                                <div class="col-sm-4">

                                    <input asp-for="Email" class="form-control form-control-user test" id="exampleInputEmail"
                                           placeholder="Email Address" readonly />
                                    <span asp-validation-for="Email" class="text-danger"></span>


                                </div>
                                <div class="col-sm-5 ">

                                    <input asp-for="Address" class="form-control form-control-user test" id="exampleInputEmail"
                                           placeholder="Address" readonly />
                                    <span asp-validation-for="Address" class="text-danger"></span>


                                </div>
                            </div>

                            <div style="margin-bottom:-15px" class="row">
                                <div class="col-sm-2"></div>
                                <div class="col-sm-4 mb-3 mb-sm-0">
                                    <label class=" form-control-user test "> City</label>
                                </div>
                                <div class="col-sm-4 mb-3 mb-sm-0">
                                    <label class=" form-control-user test ">Country</label>
                                </div>



                            </div>

                            <div class="form-group row">
                                <div class="col-sm-2"></div>
                                <div class="col-sm-4 mb-3 mb-sm-0">

                                    <input asp-for="city" class="form-control form-control-user test" id="exampleFirstName"
                                           placeholder="City" readonly />
                                    <span asp-validation-for="city" class="text-danger"></span>

                                </div>
                                <div class="col-sm-4">

                                    <input asp-for="Country" class="form-control form-control-user test" id="exampleFirstName" readonly />


                                    <span asp-validation-for="Country" class="text-danger"></span>
                                </div>

                            </div>

                            <br />


                            @*  <div class="col-sm-3 mb-3 mb-sm-0">

                            <input type="image" src="~/Images/pdf incon.jpg" style="width:100px;height:100px;" asp-for="UploadPAN" id="exampleFirstName" />
                            </div>*@


                            <hr>
                        </form>
                        <hr>

                        <div class="text-center">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

