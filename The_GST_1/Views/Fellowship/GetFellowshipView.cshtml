<!-----------------------------------------------------------Show Fellowship Detalis For Update--------------------------------------------------------------------------------------------------------->
<!---CA Side Show this View ---------->

@model Repository_Logic.Dto.Application_User_Dto

<div class="row ml-2 ml-md-auto justify-content-md-end ">
    <a class="back-button" asp-area="" asp-controller="Fellowship" asp-action="FellowshipList">

        <span><i class="fa-solid fa-user"></i> Fellowship List </span>
    </a>

</div>
<div class="container-fluid">

    <div class="card o-hidden border-0 shadow-lg my-5" style="border: 4px solid black; border-radius:15px; /* Add this line to set the black border */
    box-shadow: 0 5px 10px rgba(0,0,0,0.1);
    box-sizing: border-box; background-image: url('/Images/RegistorBackGround4.jpg'); background-size: cover; ">
        <div class="MiddleLine">
        </div>
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">


                <div class="col-lg-12">
                    <div class="p-5">
                        <h1 class="Nameheader"><b>Add  Fellowship</b> </h1>

                        <form class="user" asp-action="UpdateFellowship" id="registerForm" method="post" enctype="multipart/form-data">
                            <input type="hidden" id="userId" asp-for="Id" class="form-control" />

                            <div class="form-group row">
                                <div class="profile-pic" style="margin:auto;">
                                    <label class="-label" for="file">
                                        <span class="glyphicon glyphicon-camera"></span>
                                        
                                    </label>
                                    @if (!string.IsNullOrEmpty(Model.ProfileImage))
                                    {
                                        <img src="~/@Model.ProfileImage" id="output" width="200" />
                                    }
                                    else
                                    {
                                     
                                        <img src="https://cdn3.iconfinder.com/data/icons/vector-icons-6/96/256-1024.png" id="output" width="200" alt="Default Image" />
                                    
                                    }
                                </div>
                            </div>


                            <div class="form-group row">
                                <div class="col-sm-4 mb-3 mb-sm-0">
                                    <div class="input_box">
                                        <div class="lablesForm">First Name:</div>
                                        <input readonly asp-for="FirstName" >
                                    </div>

                                </div>
                                <div class="col-sm-4">
                                    <div class="input_box">
                                        <div class="lablesForm">Middle Name:</div>
                                        <input readonly asp-for="MiddleName"  />
                                    </div>
                                </div>


                                <div class="col-sm-4 mb-3 mb-sm-0">
                                    <div class="input_box">
                                        <div class="lablesForm">Last Name:</div>
                                        <input readonly asp-for="LastName" />
                                    </div>



                                </div>
                            </div>

                            <div class="form-group row">



                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <div class="input_box">
                                        <div class="lablesForm">Phone No:</div>
                                        <input readonly type="number" asp-for="PhoneNumber" />
                                    </div>

                                </div>

                                <div class="col-sm-6">
                                    <div class="input_box">
                                        <div class="lablesForm">Email:</div>
                                        <input readonly asp-for="Email" />
                                    </div>
                                    <div id="resultMessage"></div>

                                </div>
                            </div>





                            <div class="form-group row">

                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <div class="input_box">
                                        <div class="lablesForm">City:</div>
                                        <input readonly asp-for="city" />
                                    </div>


                                </div>

                                <div class="col-sm-6">
                                    <div class="input_box">
                                        <div class="lablesForm">Country:</div>
                                        <input readonly asp-for="Country" />

                                    </div>

                                </div>


                            </div>

                            <div class="form-group row">





                                <div class="col-sm-12">
                                    <div class="input_box">
                                        <div class="lablesForm">Address:</div>
                                        <input readonly asp-for="Address" />
                                    </div>

                                </div>

                            </div>


                           
                        </form>

                        <div class="text-center">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="MiddleLine">
        </div>

    </div>

</div>
