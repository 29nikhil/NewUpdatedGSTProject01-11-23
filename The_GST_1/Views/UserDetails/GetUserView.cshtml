                                           placeholder="City" readonly />
                                    <span asp-validation-for="city" class="text-danger"></span>

                                </div>
                                <div class="col-sm-2">

                                    <input asp-for="Country" class="form-control form-control-user test" id="exampleFirstName" readonly />


                                    <span asp-validation-for="Country" class="text-danger"></span>
                                </div>
                                <div class="col-sm-3">
                                    <input asp-for="GSTNo" class="form-control form-control-user test" id="exampleFirstName"
                                           placeholder="GST No" readonly />
                                    <span asp-validation-for="GSTNo" class="text-danger"></span>
                                </div>

                                <div class="col-sm-2 mb-3 mb-sm-0">
                                    <input readonly asp-for="BusinessType" class="form-control form-control-user test" id="exampleFirstName"
                                           placeholder="BusinessType" readonly />


                                    <span asp-validation-for="BusinessType" class="text-danger"></span>

                                </div>

                            </div>

                            <div style="margin-bottom:-15px" class="row">
                                <div class="col-sm-5 mb-3 mb-sm-0">
                                    <label class=" form-control-user test "> Website </label>
                                </div>
                                <div class="col-sm-4 mb-3 mb-sm-0">
                                    <label class=" form-control-user test "> Pan-Card No</label>
                                </div>
                                <div class="col-sm-3 mb-3 mb-sm-0">
                                    <label class=" form-control-user test ">Adhar Card No</label>
                                </div>

                            </div>

                            <div class="form-group row">

                                <div class="col-sm-5">
                                    <input asp-for="website" class="form-control form-control-user test" id="exampleFirstName"
                                           placeholder="Web-Site" readonly />
                                    <span asp-validation-for="website" class="text-danger"></span>
                                </div>

                                <div class="col-sm-4 mb-3 mb-sm-0">

                                    <input asp-for="PANNo" class="form-control form-control-user test" id="exampleFirstName"
                                           placeholder="Pan Card No" readonly />
                                    <span asp-validation-for="PANNo" class="text-danger"></span>

                                </div>

                                <div class="col-sm-3 mb-3 mb-sm-0">

                                    <input asp-for="AdharNo" class="form-control form-control-user test" id="exampleFirstName"
                                           placeholder="Adhar Card No" readonly />
                                    <span asp-validation-for="AdharNo" class="text-danger"></span>

                                </div>


                            </div>
                            <input hidden asp-for="UploadAadhar" class="form-control form-control-user test" id="exampleFirstName"
                                   placeholder="Adhar Card No" readonly />
                            <input hidden asp-for="UploadPAN" class="form-control form-control-user test" id="exampleFirstName"
                                   placeholder="Adhar Card No" readonly />
                            <br />
                          
