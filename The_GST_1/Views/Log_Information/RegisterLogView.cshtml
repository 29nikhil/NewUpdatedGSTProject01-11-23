@model IEnumerable<Repository_Logic.Dto.RegisterLogVIew_Dto>
<div class="card shadow mb-4" style="border-radius:15px; box-shadow: 0 5px 10px rgba(0,0,0,0.1);">
    <div class="card-header py-3" style="background-color:#002F6C;border-top-right-radius: 15px;border-top-left-radius: 15px">
        <h1 class="Nameheader"><b>Register log</b></h1>
    </div>
    <div class="card-body">
      

        <div class="table-responsive">

            <table id="RegisterLogsDataTable" class="table table-bordered" class="table table-bordered " width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                           User Name
                        </th>
                        <th>
                            Register By Name
                        </th>
                        <th>
                          CA Name
                        </th>
                        <th>
                          DATE
                        </th>
                        <th>
                           User Role
                       </th>
                      
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                           
                            <td>
                                @Html.DisplayFor(modelItem => item.userFullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RegistorByName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CA_Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                <strong>
                                @if(item.RegistorStatus=="User")
                                {
                                        <strong>
                                            <span style="color:red "> @Html.DisplayFor(modelItem => item.RegistorStatus)</span>
                                        </strong>
                                }
                                else
                                {
                                    <span style="color:forestgreen"> @Html.DisplayFor(modelItem => item.RegistorStatus)</span>

                                }
                                </strong>
                            </td>
                            

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts {
    
    <script>
        $(document).ready(function () {
        console.log("Hit");

        $('#RegisterLogsDataTable').DataTable({
            "processing": true,
            "serverSide": true,
            "filter": true,
            "order": [3, 'desc'],
            "ajax": {
                "url": "/Log_Information/ResistorlogListDataTable",
                "type": "POST",
                "datatype": "json"
            },
            "columns": [
                { "data": "userFullName", "name": "userFullName" },
                { "data": "registorByName", "name": "RegistorByName" },
                { "data": "cA_Name", "name": "CA_Name" },
                { "data": "date", "name": "Date" },
                {
                    "render": function (data, type, row) {
                        console.log(row);
                        var queryString = $.param(row);

                        if (row.registorStatus == "User") {
                            return '<strong><span style="color:red">User</span></strong>';
                        } else {
                            return '<strong><span class="blink" style="color:green">Fellowship</span></strong>';
                        }
                    }
                },
            ]
        });
    });


    </script>
