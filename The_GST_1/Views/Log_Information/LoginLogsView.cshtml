@model IEnumerable<Repository_Logic.Dto.LoginLogs_Dto>

<div class="card shadow mb-4" style="border-radius:15px; box-shadow: 0 5px 10px rgba(0,0,0,0.1);">
    <div class="card-header py-3" style="background-color:#002F6C;border-top-right-radius: 15px;border-top-left-radius: 15px">
        <h1 class="Nameheader"><b>Login logs</b></h1>
    </div>
    <div class="card-body">


      <div class="table-responsive">
       <table id="ViewLoginLogs" class="table table-bordered" width="100%" cellspacing="0">
          <thead>
             <tr>
                  <th>
                      UserName
                  </th>
                  <th>
                      Message
                 </th>
                 <th>
                      Login Status
                 </th>
                 <th>
                      Date
                 </th>

             </tr>
    </thead>
    <tbody>

        @foreach(var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.UserID)

                </td>
                <td>
                    @Html.DisplayFor(modelItem=>item.Message)
                </td>
                <td>
                              
                                
                </td>
                <td>
                    @Html.DisplayFor(modelItem=>item.Date)
                </td>

            </tr>
        }

    </tbody>

  </table>
  </div>
  </div>
  </div>

@section Scripts
    {
    <script>
        $(document).ready(function () {

            if ($.fn.DataTable.isDataTable('#ViewLoginLogs')) {
                $('#ViewLoginLogs').DataTable().destroy();
            }

            $('#ViewLoginLogs').DataTable(
                {
                    "processing": true,
                    "serverSide": true,
                    "filter": true,
                    "order": [3, 'desc'],
                    "ajax": {
                        "url": "/Log_Information/LoginLogsDataTable",
                        "type": "POST",
                        "datatype": "json"                                         
                    },
                    "columns": [
                        { "data": "userID", "name": "UserID" },
                        { "data": "message", "name": "Message" },
                        {
                            "data": "currentStatus",
                            "name":"CurrentStatus",
                            "render": function (data, type, row) {
                                console.log(row);
                                var queryString = $.param(row);

                                if (row.currentStatus == "Failed") {
                                    return '<strong><span  style="color:red">Failed</span></strong>';
                                } else {
                                    return '<strong><span class="blink" style="color:green">Success</span></strong>';
                                }
                            }
                        },
                        { "data": "date", "name": "Date" }
                        
                    ]
                }
            );

        });

    </script>

}