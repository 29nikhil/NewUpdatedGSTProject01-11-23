<div class="container">
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0 user">
            <div class="row">
                <div class="col-lg-12">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="text-gray-900 mb-4">GST Tax Calculator</h1>
                        </div>
                        <hr>
                        <div class="form-group row">
                            <div class="col-sm-12 col-md-4 mb-3 mb-sm-0">
                                <label for="initialAmount">Enter Initial Amount:</label>
                                <input type="number" id="initialAmount" step="1" onkeyup="calculateGST()" placeholder="Enter amount" required class="form-control form-control-user" id="exampleFirstName" />
                            </div>
                          
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-12 col-md-4 mb-3 mb-sm-0">
                                <label for="gstRate">Select GST Rate (%):</label>
                                <select id="gstRate" class="form-control form-control-user" onchange="calculateGST()">
                                    <option value="0">0%</option>
                                    <option value="1" selected>1%</option>
                                    <option value="5">5%</option>
                                    <option value="12">12%</option>
                                    <option value="18">18%</option>
                                    <option value="28">28%</option>
                                </select>
                            </div>
                            
                        </div>
                        <p>Initial Amount: <span id="initialAmountDisplay"></span></p>
                        <p>GST Amount: <span id="gstAmountDisplay"></span></p>
                        <p>Total Amount: <span id="totalAmountDisplay"></span></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function calculateGST() {
        const initialAmount = parseFloat(document.getElementById("initialAmount").value);
        const gstRate = parseFloat(document.getElementById("gstRate").value);

        if (!isNaN(initialAmount) && !isNaN(gstRate)) {
            const gstAmount = (initialAmount * gstRate) / 100;
            const totalAmount = initialAmount + gstAmount;
            var a = "\u20A8";
            document.getElementById("initialAmountDisplay").textContent = `${a+ initialAmount.toFixed(2)
        } `;
                document.getElementById("gstAmountDisplay").textContent = `${a+ gstAmount.toFixed(2) } `;
                document.getElementById("totalAmountDisplay").textContent = `${a+ totalAmount.toFixed(2) } `;
        } else {
            alert("Please enter valid numeric values.");
        }
    }
</script>
<script src="~/js/lotifyiles.js"></script>