@page
@model ProfileResetPasswordModel
@{
    ViewData["Title"] = "Reset  your password?";
}




    <!-- Outer Row -->
@{
    

}
<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-10 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">

                        <div class="col-lg-6 mx-auto">
                            <!-- Center the column horizontally -->

                            <div class="p-5">
                                <div class="text-center">
                                    <h2>Reset Your Password?</h2>
                                </div>

                                <form id="resetPasswordForm" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                    <div class="form-group">
                                        <label asp-for="Input.Email" class="form-label"></label>
                                        <input asp-for="Input.Email" class="form-control form-control-user" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-user btn-block">Reset Password</button>
                                </form>
                                <hr>

                                <div class="text-center">
                                    @* <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>*@
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>

        </div>

    </div>

</div>


@if (TempData["ErrorMessageResetPassword"] != null)
{

    <script>
        Swal.fire({
            title: 'Fail To Reset Password!',
            text: '@TempData["ErrorMessageResetPassword"]',
            icon: 'error'
        });
    </script>

}
<script>
    document.getElementById("resetPasswordForm").addEventListener("submit", function (event) {
        event.preventDefault(); // Prevent the default form submission

        // Assume your form data is valid and the reset password is successful
        // For the purpose of this example, let's assume a successful reset
        simulateResetPasswordSuccess();
    });

    function simulateResetPasswordSuccess() {
        // Simulate a successful reset password operation
        // You can replace this with your actual form submission logic
        // and handle the success case accordingly

        // Show SweetAlert on success
        Swal.fire({
            icon: 'success',
            title: 'Password Reset Successful!',
            text: 'Your password has been successfully reset.',
            confirmButtonColor: '#3085d6',
            confirmButtonText: 'OK'
        }).then((result) => {
            // You can redirect the user to another page or perform other actions after the success alert
            if (result.isConfirmed) {
                window.location.href = '/Home/Index'; // Replace with your desired redirect URL
            }
        });
    }
</script>

