@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm email";
}






<div class="row justify-content-center">
    <!-- Center the entire row horizontally -->
    <div class="col-lg-8" style="background-color:white">
        <div class="p-5 text-center">
            <div class="form-group row">
                <div class="col-sm-4 mb-3 mb-sm-0 mx-auto">
                    <!-- Center the column horizontally -->
                    <h1>@ViewData["Title"]</h1>
                    <partial name="_StatusMessage" model="Model.StatusMessage" />
                    <div class="mt-3">

                        <a id="login-submit" asp-controller="Home" asp-action="Privacy" class="btn btn-primary btn-user btn-block" style="color: white; background-color: #007bff; border-color: #007bff;">Go to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

      

